<widget id="Delicious" version="0.0.1" 
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Delicious</name>
  <description>A sample Apache Cordova application that responds to the deviceready event.</description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">Apache Cordova Team</author>
  <content src="index.html"/>
  <access origin="*"/>
  <access origin="https://delicious.com" subdomains="true"/>
  <access origin="https://avosapi.delicious.com" subdomains="true"/>
  <preference name="WebSecurity" value="disable"/>
</widget>